<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Сalculator_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:background">@drawable/pic</item>
        <item name="android:layout_weight">1</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:textSize">@dimen/calc_button_size</item>
        <item name="android:insetLeft">dimen/insLift</item>
        <item name="android:insetRight">dimen/insRight</item>

    </style>

    <style name="Theme.Сalculator_app.signs">
        <item name="android:backgroundTint">#8EA1D8</item>
    </style>

    <style name="theme">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textSize">@dimen/calc_button_size_theme</item>
    </style>

    <style name="text_win_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/marTop</item>
        <item name="android:layout_marginBottom">@dimen/marBot</item>
        <item name="android:background">@drawable/input_text</item>
        <item name="android:paddingStart">@dimen/padStart</item>
        <item name="android:paddingTop">@dimen/padTop</item>
        <item name="android:paddingEnd">@dimen/padEnd</item>
        <item name="android:paddingBottom">@dimen/padBottom</item>
        <item name="android:textSize">@dimen/textViewSize</item>
    </style>

</resources>